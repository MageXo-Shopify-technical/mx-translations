<!-- breadcrumb -->{% include 'breadcrumb' %}<div class="page_min_h">
    <div class="page-width">
        <h1 class="page-title {{settings.title_align}}">{{ 'customer.account.title' | t }}</h1>
        <div class="grid">
            <div class="grid__item medium-up--two-thirds">
                <h4 class="light-bg p10 tc">{{ 'customer.orders.title' | t }}</h4>{% paginate customer.orders by 20 %}{% if customer.orders.size != 0 %}<table class="responsive_tbl">
                    <thead>
                        <tr>
                            <th>{{ 'customer.orders.order_number' | t }}</th>
                            <th>{{ 'customer.orders.date' | t }}</th>
                            <th>{{ 'customer.orders.payment_status' | t }}</th>
                            <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
                            <th>{{ 'customer.orders.total' | t }}</th>
                            <th scope="col"><ls-static-658774>Return / Exchange</ls-static-658774></th>
                        </tr>
                    </thead>
                    <tbody>{% for order in customer.orders %}<tr>
                            <td data-label="{{ 'customer.orders.order_number' | t }}"><a href="{{ order.customer_url }}" class="btn btn--secondary btn--small">{{ order.name }}</a></td>
                            <td data-label="{{ 'customer.orders.date' | t }}">{{ order.created_at | date: format: 'month_day_year' }}</td>
                            <td data-label="{{ 'customer.orders.payment_status' | t }}">{{ order.financial_status_label }}</td>
                            <td data-label="{{ 'customer.orders.fulfillment_status' | t }}">{{ order.fulfillment_status_label }}</td>
                            <td data-label="{{ 'customer.orders.total' | t }}">{{ order.total_price | money }}</td>
                            <td data-order_name={{order.id}} data-label="Return" class="return__exchange">{% if order.fulfillment_status == 'unfulfilled' %}<p class="js-return-exchange disabled"> <ls-static-651292>Not Available</ls-static-651292>
                                <p>{% else %}<a href="#" class="js-return-exchange {% if order.fulfillment_status == 'unfulfilled' %} disabled{% endif %}" data-order="{{ order.name }}" data-customer="{{ customer.email }}"><ls-static-117948>Return / Exchange</ls-static-117948></a>{% endif %}
                            </td>
                        </tr>{%- endfor -%}</tbody>
                </table>{% else %}<p>{{ 'customer.orders.none' | t }}</p>{% endif %}{% if paginate.pages > 1 %}{% include 'pagination' %}{% endif %}{% endpaginate %}
            </div>
            <div class="grid__item medium-up--one-third">
                <h4 class="light-bg p10 tc">{{ 'customer.account.details' | t }}</h4>{{ customer.default_address | format_address }}
                <p><a href="/account/addresses" class="btn btn--small">{{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})</a></p>
            </div>
        </div>
    </div>
</div>
{% include 'returnprime_script' %}