{% comment %}
  Template used to generated recently viewed product section
{% endcomment %}
{% layout none %}

{%- if search.performed -%}
  {%- assign image_size = '150,350,550,750' -%}
  <div
    class='recently-viewed__carousel grid grid-products carousel arwOut'
    data-slick='{"slidesToShow": 4,"slidesToScroll": 1, {%- if settings.rtl -%}"rtl": true,{%- endif -%} "infinite": true, "responsive":[{"breakpoint": 1024,"settings":{"slidesToShow": 3 }},{"breakpoint": 767,"settings":{"slidesToShow": 2 }} ]}'
  >
    {%- for item in search.results -%}
      {%- if item.object_type == 'product' -%}
        <div class='recently-viewed__slide grid__item item small--one-half medium--one-third large-up--one-quarter'>
          {%- liquid
            render 'product-card-grid-recently-viewed' with product: item, grid_image_width: image_size
          -%}
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
{%- endif -%}
