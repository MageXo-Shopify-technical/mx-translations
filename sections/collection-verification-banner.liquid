{{ 'collection-verification-banner.min.css' | asset_url | stylesheet_tag }}

<section class='collection-verification-banner collection-verification-banner--{{ section.id }} color-{{ section.settings.background_color }}'>
  <style>
    .collection-verification-banner--{{ section.id }} {
      padding: {{ section.settings.paddingsection_mob }};
    }

    @media (min-width: 768px) {
      .collection-verification-banner--{{ section.id }} {
        padding: {{ section.settings.paddingsection }};
      }
    }

    {% if section.settings.image_mobile %}
      .collection-verification-banner--{{ section.id }} .collection-verification-banner__image.collection-verification-banner__image--mobile {
        display: block;
      }
      .collection-verification-banner--{{ section.id }} .collection-verification-banner__image {
        display: none;
      }
    {% else %}
      .collection-verification-banner--{{ section.id }} .collection-verification-banner__image {
        display: block;
      }
    {% endif %}

    @media only screen and (min-width: 768px) {
      .collection-verification-banner--{{ section.id }} .collection-verification-banner__image.collection-verification-banner__image--mobile {
        display: none;
      }
      .collection-verification-banner--{{ section.id }} .collection-verification-banner__image {
        display: block;
      }
    }
  </style>

  <div class='{% if section.settings.section_width %}fullwidth-{{ section.id }}{% else %}page-width{% endif %}'>
    <div class='collection-verification-banner__wrapper wow fadeIn'>
      <div class='collection-verification-banner__figure'>
        {% if section.settings.image_desktop %}
          {{
            section.settings.image_desktop
            | image_url: width: 1500
            | image_tag:
              widths: '375, 550, 750, 1100, 1500',
              sizes: '(min-width: 1200px) 50vw, 100vw',
              fetchpriority: 'low',
              alt: 'Left image',
              class: 'collection-verification-banner__image'
          }}
        {% endif %}
        {% if section.settings.image_mobile %}
          {{
            section.settings.image_mobile
            | image_url: width: 1000
            | image_tag:
              widths: '375, 550, 750, 1000',
              sizes: '(max-width: 749px) 100vw',
              fetchpriority: 'low',
              alt: 'Mobile image',
              class: 'collection-verification-banner__image collection-verification-banner__image--mobile'
          }}
        {% endif %}
      </div>

      <div class='collection-verification-banner__center'>
        <div class='rte'>{{ section.settings.text }}</div>
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href='{{ section.settings.button_link }}' class='button collection-verification-banner__button'>
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Verification Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "section_width",
      "label": "Fullwidth?",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Center text"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Verify your memorabilia"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "text",
      "id": "paddingsection",
      "label": "Padding Section (desktop)",
      "default": "0px 0px 0px 0px",
      "info": "Padding: Top Right Bottom Left"
    },
    {
      "type": "text",
      "id": "paddingsection_mob",
      "label": "Padding Section (mobile)",
      "default": "0px 0px 0px 0px",
      "info": "Padding: Top Right Bottom Left"
    }
  ],
  "presets": [
    {
      "name": "Collection Verification Banner"
    }
  ]
}
{% endschema %}
