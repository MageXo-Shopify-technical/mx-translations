            {% when '5%' %}
              {%- assign block_width = 'medium-up--one-twelfth' -%}
            {% when '20%' %}
              {%- assign block_width = 'medium-up--one-fifth' -%}
            {% when '25%' %}
              {%- assign block_width = 'medium-up--one-quarter' -%}
            {% when '30%' %}
              {%- assign block_width = 'medium-up--three-tenths' -%}
            {% when '33%' %}
              {%- assign block_width = 'medium-up--one-third' -%}
            {% when '40%' %}
              {%- assign block_width = 'medium-up--two-fifths' -%}
            {% when '50%' %}
              {%- assign block_width = 'medium-up--one-half' -%}
            {% when '60%' %}
              {%- assign block_width = 'medium-up--three-fifths' -%}
            {% when '66%' %}
              {%- assign block_width = 'medium-up--two-thirds' -%}
            {% when '75%' %}
              {%- assign block_width = 'medium-up--three-quarters' -%}
            {% when '100%' %}
              {%- assign block_width = 'one-whole' -%}
            {% when 'auto' %}
              {%- assign block_width = 'medium-up--auto' -%}
            {% when 'content' %}
              {%- assign block_width = 'medium-up--min-content' -%}
          {% endcase %}

          {% capture blockTtl %}{% if block.settings.title != blank %}<h4 class="h4">{{ block.settings.title }}</h4>{% endif %}{% endcapture %}
          
          {%- case block.type -%}
        
            {% when 'custom' %}
            <div id="nav_menu-{{ block.id }}" class="ft_block_item {{ block_width }} custom-block{% if block.settings.txt_center %} tc{% endif %}">
              {{ blockTtl }}

              {% if block.settings.logo %}
              <p style="max-width:{{ block.settings.logo-wd }}px" {% if block.settings.txt_center %}class="m_auto"{% endif %}>
                <img 
                  class="img_fl" 
                  src="{% comment ls-rpl %}{{ block.settings.logo | img_url: '300x' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: '300x' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}" 
                  width="{{ block.settings.logo-wd }}" 
                  height="{{ block.settings.logo-wd | divided_by: block.settings.logo.aspect_ratio | floor }}"
                  srcset="{% comment ls-rpl %}{{ block.settings.logo | img_url: '300x' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: '300x' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 1x, {% comment ls-rpl %}{{ block.settings.logo | img_url: '300x', scale: 2 }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: '300x', scale: 2 -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 2x"
                  alt="{% comment ls-rpl %}{{ block.settings.logo.alt | default: shop.name }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: block.settings.logo -%}{%- endcapture -%}{{ LS_ALT | default: shop.name }}{% comment /ls-rpl %}{% endcomment %}"
                >
              </p>
              {% endif %}

              {% if block.settings.custom-text != blank %}<div class="text custom-text mb15">{{ block.settings.custom-text }}</div>{% endif %}
              {% if block.settings.show_socials %}
                {% if block.settings.socials_ttl != blank %}<h5 class="h4">{{ block.settings.socials_ttl }}</h5>{% endif %}
                {% render 'social-media' %}
              {% endif %}
              
              {% if block.settings.show_payicon %}
              {% for type in shop.enabled_payment_types %}{{ type | payment_type_svg_tag: class: 'payment-list__item' }}{% endfor %}          
              {% endif %}  
            </div>

            {% when 'image' %}
            <div id="nav_menu-{{ block.id }}" class="imgblock ft_block_item {{ block_width }} custom-block{% if block.settings.txt_center %} tc{% endif %}">
              {{ blockTtl }}

              
              {% if block.settings.custom-text != blank %}<div class="text custom-text mb15">{{ block.settings.custom-text }}</div>{% endif %}
              
              <div class="fl f-wrap">
              {% if block.settings.logo %}
                <p style="max-width:{{ block.settings.logo-wd }}px" class="mb10{% if block.settings.logomr %} mr15{% endif %}" >
                  <a target="_blank" href="{{ block.settings.url1 }}">
                    <img class="img_fl" 
                      src="{% comment ls-rpl %}{{ block.settings.logo | img_url: '300x' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: '300x' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}" 
                      width="{{ block.settings.logo-wd }}" 
                      height="{{ block.settings.logo-wd | divided_by: block.settings.logo.aspect_ratio | floor }}"
                      srcset="{% comment ls-rpl %}{{ block.settings.logo | img_url: '300x' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: '300x' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 1x, {% comment ls-rpl %}{{ block.settings.logo | img_url: '300x', scale: 2 }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: '300x', scale: 2 -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 2x"
                      alt="{% comment ls-rpl %}{{ block.settings.logo.alt | default: shop.name }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: block.settings.logo -%}{%- endcapture -%}{{ LS_ALT | default: shop.name }}{% comment /ls-rpl %}{% endcomment %}"
                    >
                    </a>
                </p>
              {% endif %}
              
              {% if block.settings.logo2 %}
                <p style="max-width:{{ block.settings.logo-wd2 }}px">
                  <a target="_blank" href="{{ block.settings.url2 }}">
                    <img class="img_fl" 
                      src="{% comment ls-rpl %}{{ block.settings.logo2 | img_url: '300x' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo2, img_url: '300x' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}" 
                      width="{{ block.settings.logo-wd2 }}" 
                      height="{{ block.settings.logo-wd2 | divided_by: block.settings.logo2.aspect_ratio | floor }}"
                      srcset="{% comment ls-rpl %}{{ block.settings.logo2 | img_url: '300x' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo2, img_url: '300x' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 1x, {% comment ls-rpl %}{{ block.settings.logo2 | img_url: '300x', scale: 2 }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo2, img_url: '300x', scale: 2 -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 2x"
                      alt="{% comment ls-rpl %}{{ block.settings.logo2.alt | default: shop.name }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: block.settings.logo2 -%}{%- endcapture -%}{{ LS_ALT | default: shop.name }}{% comment /ls-rpl %}{% endcomment %}"
                    >
                  </a>
                </p>
              {% endif %}          
              </div>                  
            </div>
          
            {% when 'menu' %}
