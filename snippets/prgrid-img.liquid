{%- if image != blank -%}
	{%- if sizes == blank -%}{% assign sizes = '150,350,550,750,950,1200,1500' %}{%- endif -%}
	{%- assign imgsizes = sizes | split: ',' -%}
	{%- for size in imgsizes -%}
		{%- assign width = size | append: 'x' -%}
		{%- assign lsize = size | plus: 0 -%}
		{%- if image.width >= lsize -%}{% comment ls-rpl %}{{ image | img_url: width }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: image, img_url: width -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} {{size}}w {{ size | divided_by: image.aspect_ratio | round }}h,{%- endif -%}
	{%- endfor -%}
	{% comment ls-rpl %}{{ image | img_url: 'master' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: image, img_url: 'master' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} {{ image.width }}w {{ image.height }}h
{%- endif -%}